        android:supportsRtl="true"
        android:theme="@style/Theme.Aluminate">
        <activity android:name="com.atul.aluminate.CommentActivity"></activity>
        <activity android:name="com.atul.aluminate.SignUpActivity" />
        <activity android:name="com.atul.aluminate.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.atul.aluminate.MainActivity" />

<!--        <activity android:name=".MessageActivity" android:parentActivityName=".ChatActivity" />-->
<!--        <activity android:name=".ChatActivity" />-->

        <meta-data
